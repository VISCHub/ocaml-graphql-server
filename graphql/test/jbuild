(jbuild_version 1)

(library
 ((name graphql_test)
  (wrapped false)
  (modules
   (echo_schema
    schema_test
    test_common
    test_schema
    variable_test
    argument_test
    introspection_test))
  (libraries (graphql alcotest))))

(executables
 ((libraries (graphql_test))
  (modules (test))
  (names (test))))

(alias
 ((name runtest)
  (package graphql)
  (deps (test.exe))
  (action (run ${<} -v))))
